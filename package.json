{
    "name": "ui-kit",
    "description": "базовые компоненты",
    "version": "0.0.0-local",
    "private": false,
    "author": "Marina Shustrova",
    "main": "dist/index.es.js",
    "module": "dist/index.es.js",
    "types": "dist/index.d.ts",
    "style": "dist/index.css",
    "files": [
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/MarinaShustrova/Ui-Kit"
    },
    "scripts": {
        "dev": "vite",
        "watch": "tsc -w | vite build --watch",
        "test": "react-scripts test --watchAll=false --passWithNoTests",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "format": "prettier --write .",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "storybook-docs": "storybook dev --docs",
        "build-storybook-docs": "storybook build --docs"
    },
    "dependencies": {
        "@svgr/webpack": "^6.5.1",
        "@tanstack/react-virtual": "^3.10.8",
        "classnames": "^2.3.2",
        "esbuild": "^0.16.7",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router": "^6.4.5",
        "react-router-dom": "^6.4.5",
        "react-scripts": "^5.0.1",
        "react-transition-group": "^4.4.5"
    },
    "devDependencies": {
        "@babel/plugin-proposal-private-property-in-object": "^7.20.7",
        "@chromatic-com/storybook": "^1.9.0",
        "@storybook/addon-actions": "^8.3.4",
        "@storybook/addon-essentials": "^8.3.4",
        "@storybook/addon-links": "^8.3.4",
        "@storybook/node-logger": "^8.3.4",
        "@storybook/preset-create-react-app": "^8.3.4",
        "@storybook/react": "^8.3.4",
        "@storybook/react-webpack5": "^8.3.4",
        "@storybook/test": "^8.3.4",
        "@types/jest": "^29.2.4",
        "@types/node": "^18.11.15",
        "@types/react": "^18.0.26",
        "@types/react-dom": "^18.0.9",
        "@types/react-router": "^5.1.19",
        "@types/react-router-dom": "^5.3.3",
        "@types/react-transition-group": "^4.4.11",
        "@vitejs/plugin-react": "^3.0.0",
        "babel-loader": "^9.1.0",
        "babel-plugin-named-asset-import": "^0.3.8",
        "babel-preset-react-app": "^10.0.1",
        "eslint-plugin-storybook": "^0.9.0",
        "prettier": "^2.8.8",
        "sass": "^1.49.0",
        "storybook": "^8.3.4",
        "typescript": "^4.9.4",
        "vite": "^4.0.1",
        "vite-esbuild-typescript-checker": "^1.0.0",
        "vite-plugin-dts": "^1.7.1",
        "vite-plugin-svgr": "^2.4.0",
        "vite-tsconfig-paths": "^4.0.3",
        "webpack": "^5.95.0"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest",
            "plugin:storybook/recommended"
        ],
        "overrides": [
            {
                "files": [
                    "**/*.stories.*"
                ],
                "rules": {
                    "import/no-anonymous-default-export": "off"
                }
            },
            {
                "files": [
                    "**/*.stories.*"
                ],
                "rules": {
                    "import/no-anonymous-default-export": "off"
                }
            }
        ]
    },
    "prettier": {
        "printWidth": 100,
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true,
        "jsxBracketSameLine": false,
        "arrowParens": "avoid",
        "trailingComma": "all",
        "bracketSpacing": true
    }
}
